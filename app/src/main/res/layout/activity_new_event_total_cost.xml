<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.groupfund.ui.NewEventTotalCostActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter the Total Estimated Cost:"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/newTotalCostEditText"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:hint="Estimated Total Cost" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Members"
        android:id="@+id/inviteButton"
        android:layout_below="@+id/newTotalCostEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

</RelativeLayout>
